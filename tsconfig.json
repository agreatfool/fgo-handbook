{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/lib/**/*",
        "src/model/**/*",
        "src/server/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}