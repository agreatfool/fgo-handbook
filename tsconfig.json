{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "build",
        "moduleResolution": "node",
        //"noImplicitAny": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "files": [
        "typings/index.d.ts"
    ],
    "compileOnSave": false
}