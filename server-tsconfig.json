{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "server_build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/lib/**/*.ts",
    "src/model/**/*.ts",
    "src/server/**/*.ts",
    "typings/**/*.d.ts",
    "node_modules/puppeteer-tsd/src/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}